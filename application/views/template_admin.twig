    </div>
</div>

<!-- Begin page content -->
<div class="container">
    <div class="page-header">
        <h1>{{ title }}</h1>
    </div>
    {% block content %}
    {% endblock %}
</div>

<script src="/bower/jquery/dist/jquery.min.js"></script>
<script src="/bower/bootstrap/dist/js/bootstrap.min.js"></script>
{% include '_chunks/scripts.twig' %}

{% block scripts %}
{% endblock %}
